{
  "name": "@repo/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./*": {
      "import": "./*"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "NODE_ENV=production tsx src/index.ts",
    "build": "ncc build src/index.ts -o dist/app -m -s && pnpm build:script",
    "build:script": "ncc build scripts/migrate.ts -o dist/migrate -m && ncc build scripts/seed.ts -o dist/seed -m",
    "lint": "eslint .",
    "create:migration": "drizzle-kit generate",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:dev": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed.ts",
    "seed:dev": "tsx scripts/seed.ts",
    "test:unit": "tsx scripts/pretest.ts && vitest run"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/eslint": "catalog:",
    "@types/node": "catalog:",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "@types/react": "catalog:react19",
    "@types/simple-oauth2": "^5.0.7",
    "@vercel/ncc": "^0.38.3",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.750.0",
    "@aws-sdk/lib-storage": "^3.750.0",
    "@aws-sdk/s3-request-presigner": "^3.750.0",
    "@hono/node-server": "^1.13.8",
    "@hono/zod-validator": "^0.4.3",
    "@react-email/components": "^0.0.33",
    "@t3-oss/env-core": "^0.12.0",
    "chalk": "^5.4.1",
    "dayjs": "catalog:",
    "drizzle-kit": "^0.28.1",
    "drizzle-orm": "^0.36.3",
    "hono": "catalog:",
    "nanoid": "^5.1.0",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.3",
    "rate-limiter-flexible": "^5.0.5",
    "react": "catalog:react19",
    "simple-oauth2": "^5.1.0",
    "tsx": "^4.19.3",
    "uuid": "^11.1.0",
    "zod": "catalog:"
  }
}
