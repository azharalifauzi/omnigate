{
  "name": "@repo/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./*": {
      "import": "./*"
    }
  },
  "scripts": {
    "dev": "dotenvx run -f .env -f .env.local -- tsx watch src/index.ts",
    "start": "NODE_ENV=production tsx src/index.ts",
    "build": "dotenvx run -f .env -f .env.local -- ncc build src/index.ts -o dist",
    "lint": "eslint . --max-warnings 0",
    "create:migration": "dotenvx run -f .env -f .env.local -- drizzle-kit generate",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:dev": "dotenvx run -f .env -f .env.local -- tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed.ts",
    "seed:dev": "dotenvx run -f .env -f .env.local -- tsx scripts/seed.ts",
    "test:unit": "dotenvx run -f .env -f .env.local -- vitest run"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/eslint": "catalog:",
    "@types/node": "catalog:",
    "@types/nodemailer": "^6.4.16",
    "@types/pg": "^8.11.10",
    "@types/react": "catalog:react18",
    "@vercel/ncc": "^0.38.3",
    "eslint": "catalog:",
    "typescript": "catalog:",
    "vitest": "^2.1.5"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.693.0",
    "@aws-sdk/lib-storage": "^3.693.0",
    "@aws-sdk/s3-request-presigner": "^3.693.0",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "@react-email/components": "^0.0.28",
    "@t3-oss/env-core": "^0.11.1",
    "chalk": "^5.3.0",
    "dayjs": "catalog:",
    "drizzle-kit": "^0.28.1",
    "drizzle-orm": "^0.36.3",
    "hono": "catalog:",
    "nanoid": "^5.0.8",
    "nodemailer": "^6.9.16",
    "pg": "^8.13.1",
    "rate-limiter-flexible": "^5.0.4",
    "react": "catalog:react18",
    "tsx": "^4.19.2",
    "uuid": "^11.0.3",
    "zod": "catalog:"
  }
}
